	void CodingWindow::newDoc()
	{
		if (editor)
		{
		    editor->clear();
			editor->defaultSavedFilename.clear();

			if (selectedLanguage == C)
			{
                enableC();
			}
			else
			if (selectedLanguage == Python)
			{
                enablePython();
			}
			else
			if (selectedLanguage == Octave)
			{
                enableOctave();
			}
		}
	}

