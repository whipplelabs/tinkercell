	void CodingWindow::toggleSVNupdate(bool b)
	{
		QSettings settings(GlobalSettings::ORGANIZATIONNAME,GlobalSettings::ORGANIZATIONNAME);
		settings.beginGroup("Subversion");
		GlobalSettings::DO_SVN_UPDATE = b;
